<h2><%= @trip.name %> </h2>
<% 
if (@logged_user.trips.include? @trip) 
	has_map = true
else
	has_map = false
end
%>
<% if has_map %>
<%= link_to 'New Place', new_trip_place_path(@trip) %>
<% end %>
<%= gmaps4rails(@json) %>

<% if has_map %>
<%= form_tag("/trips/invite/#{@trip.id}", :method => "post") do -%>
		<%= render "layouts/invite" %>
<% end -%>
<% end %>

<script>
Gmaps.map.callback = function() {
   google.maps.event.addListenerOnce(Gmaps.map.serviceObject, 'idle', function(){
     	$('.gmaps4rails_map').children().append('<div class="gmnoprint" style="margin: 5px; z-index: 0; position: absolute; cursor: pointer; left: 90px; top: 10px;"><h2><%= @trip.name %> </h2></div>');
   }
)};


</script>
